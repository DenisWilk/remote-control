{
  "compilerOptions": {
    "target": "es2022",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "./dist"],
  "ts-node": {
    "esm": true,
    "files": true
  }
}
